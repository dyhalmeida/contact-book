<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">

  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Cadastre ou edite um contato</p>

      <%- include('includes/messages') %>

      <form action="/contact" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contact.name %>" type="text" name="name" class="form-control">
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <input value="<%= contact.email %>" type="email" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contact.telephone %>" type="tel" name="telephone" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>

    <div class="col-lg-2"></div>

  </div>
  
</div>

<%- include('includes/footer') %>