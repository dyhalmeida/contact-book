<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">

  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie a sua conta</p>
      
      <div class="row">
        
        <div class="col-lg">
          <h4>Entrar no sistema</h4>
          <p>Faça login caso já possua uma conta.</p>
          <form action="/session/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" name="email" class="form-control">
            </div>
            <div class="form-group">
              <label>Seu senha</label>
              <input type="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Acessar</button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Preencha o formulário abaixo caso não possua uma conta.</p>
          <form action="/session/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" name="email" class="form-control">
            </div>
            <div class="form-group">
              <label>Seu senha</label>
              <input type="password" name="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>

  </div>
  
</div>

<%- include('includes/footer') %>